@using Nop.Core
@using Nop.Services.Helpers
@using Nop.Web.Framework.UI
@inject IWorkContext workContext
@inject IThemeContext themeContext
@inject IUserAgentHelper userAgentHelper
@{
    var supportRtl = (await workContext.GetWorkingLanguageAsync()).Rtl;
    var themeName = await themeContext.GetWorkingThemeNameAsync();

    //add main CSS file
    if (supportRtl)
    {
        Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/styles.rtl.css?v={Nop.Web.NetaMaxHelper.CssJsVersion}");
    }
    else
    {
        Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/styles.css?v={Nop.Web.NetaMaxHelper.CssJsVersion}");
    }
    Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/owl.carousel.css?v={Nop.Web.NetaMaxHelper.CssJsVersion}");
    //add jQuery UI css file
    Html.AppendCssFileParts($"~/lib_npm/jquery-ui-dist/jquery-ui.min.css?v={Nop.Web.NetaMaxHelper.CssJsVersion}");
}