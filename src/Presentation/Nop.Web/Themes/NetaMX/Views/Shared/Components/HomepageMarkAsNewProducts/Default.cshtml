@model IList<ProductOverviewModel>
@if (Model.Count > 0)
{
    <div class="product-grid home-page-product-grid margin-0">
        <div class="prd-title">
            <h2>@T("Homepage.Products")</h2>
        </div>
        <div id="Descuentos-Dia" class="item-grid owl-carousel">
            @foreach (var item in Model)
            {
                <div class="item-box">
                    @await Html.PartialAsync("_ProductBoxHomePage", item)
                </div>
            }
        </div>
    </div>

}

<script asp-location="Footer">
    $(document).ready(function () {
        $('#Descuentos-Dia').owlCarousel({
            margin: 15,
            loop: true,
            autoWidth: true,
            items: 10
        })
    });
</script>
