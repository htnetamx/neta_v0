@model IList<ProductOverviewModel>
@{
    Layout = "_ColumnsTwo";

    //title
    Html.AddTitleParts(T("PageTitle.NewProducts").Text);
    //page class
    Html.AppendPageCssClassParts("html-recently-added-products-page");
}
<div class="page recently-added-products-page">
    <div style="display: flex; align-items: center; justify-content: space-between;margin-bottom: 2vh;">
        <div class="page-title" style="width: 70%">
            <a href="@Url.RouteUrl("NewProductsRSS")" class="link-rss" title="@T("Products.NewProducts.RSS.Hint")">@T("Products.NewProducts.RSS")</a>
            <h1>@T("Products.NewProducts")</h1>
        </div>
        <div>
            <button style="padding:1vh 2vw 1vh 2vw; border-width:0px; background-color: #4ab2f1; color: white;margin-left: 3vw" type="button" class="button-1 search-button" onclick="window.location = '/';">Regresa a la página principal</button>
        </div>
    </div>
    



    <div class="page-body">
        @if (Model.Count > 0)
        {
            <div class="product-grid">
                <div class="item-grid">
                    @foreach (var product in Model)
                    {
                        <div class="item-box">
                            @await Html.PartialAsync("_ProductBox", product)
                        </div>
                    }
                </div>
            </div>        
        }
    </div>
</div>
